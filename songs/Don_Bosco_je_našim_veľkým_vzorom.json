{
  "title": "Don Bosco je našim veľkým vzorom",
  "author": "",
  "categories": [
    "cezročné"
  ],
  "song_parts": [
    {
      "type": "verse",
      "lines": [
        "/:Don Bosco je našim veľkým vzorom.:/"
      ]
    },
    {
      "type": "chorus",
      "lines": [
        "Drahý Don Bosco, stoj vždy pri nás,",
        "chráň a požehnávaj nás."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Svetu chceme hlásať Božie slovo.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:To nás k tomu láska Krista vedie.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Duše žijú v stálom hlade, smäde.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Mária je naša Matka milá.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Don Boscovu mládež uchránila.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Ľúto nám je všetkých kamarátov.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:K Bohu chceme priviesť svojich bratov.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Od Teba nás nikto neodradí.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Život ľudí, krásu máme radi.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:K službe ochotní a pohotoví.:/"
      ]
    },
    {
      "type": "verse",
      "lines": [
        "/:Chceme ostať verní Don Boscovi.:/"
      ]
    }
  ]
}