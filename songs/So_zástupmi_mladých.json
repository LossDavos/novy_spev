{
  "title": "So zástupmi mladých",
  "author": "",
  "categories": [
    "cezročné"
  ],
  "song_parts": [
    {
      "type": "verse",
      "lines": [
        "So zástupmi mladých verných priateľov",
        "oslavujeme svätca piesňou veselou."
      ]
    },
    {
      "type": "chorus",
      "lines": [
        "Za Don Boscom otcom, za bezpečným vodcom",
        "vykročme a poďme vpred.",
        "Pod zástavou bielou k cieľu veľkých cieľov",
        "Don Bosco nás všetkých veď."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Jeho heslo žiari ako pochodeň.",
        "Ostatné si vezmi, daj mi duše len."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Viedla ho vždy viera, rozum, láskavosť,",
        "optimizmus, radosť, k Bohu istý most."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Svätý vodca dáva mladým príkazy,",
        "kto ich zachováva, iste zvíťazí."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Zdrojom jeho sily je Boh v sviatosti,",
        "ktorý vlastným telom duše uhostí."
      ]
    },
    {
      "type": "verse",
      "lines": [
        "Mládež viedol k Matke, Panne Márii,",
        "zanechal nám všetkým príklad žiarivý."
      ]
    }
  ]
}